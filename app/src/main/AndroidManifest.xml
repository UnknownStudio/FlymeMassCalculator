<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trychen.flyme.masscalculator" >

    <application
        android:name=".MassApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DeviceDefault.Light.Color.DodgerBlue"
        android:windowSoftInputMode="adjustResize" >

        <!-- Flyme Force Touch -->
        <meta-data
            android:name="android.3dtouch.launcher_menu"
            android:resource="@xml/launcher_menu" />

        <activity
            android:name="com.trychen.flyme.masscalculator.Main"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|orientation">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="com.trychen.flyme.flymemasscalculator"
                    android:path="/start"
                    android:scheme="flyme_3dtouch" />
                <data
                    android:host="com.trychen.flyme.flymemasscalculator"
                    android:path="/basic"
                    android:scheme="flyme_3dtouch" />
                <data
                    android:host="com.trychen.flyme.flymemasscalculator"
                    android:path="/higher"
                    android:scheme="flyme_3dtouch" />
            </intent-filter>
        </activity>
    </application>
</manifest>
